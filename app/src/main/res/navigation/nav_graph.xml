<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/productListFragment">

    <fragment
            android:id="@+id/productListFragment"
            android:name="com.pabji.myfridge.presentation.ui.searchProducts.SearchProductsFragment"
            android:label="fragment_product_list"
            tools:layout="@layout/fragment_product_list">
        <action
                android:id="@+id/action_productListFragment_to_createProductFragment"
                app:destination="@id/createProductFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:popUpTo="@+id/productListFragment" />
    </fragment>
    <fragment
            android:id="@+id/createProductFragment"
            android:name="com.pabji.myfridge.presentation.ui.createProduct.CreateProductFragment"
            android:label="CreateProductFragment" />
</navigation>